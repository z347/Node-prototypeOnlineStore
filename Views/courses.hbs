<h1>Courses</h1>

{{#if courses.length}}
    {{#each courses}}
        <div class="row">
            <div class="col s4 offset-3">
                <div class="card">
                    <div class="card-image">
                        <img src="{{img}}" alt="{{title}}">
                        <span class="card-title">Learn like a pro</span>
                    </div>
                    <div class="card-content">
                        <span class="card-title">{{title}}</span>
                        <p class="price">{{price}}</p>
                    </div>
                    <div class="card-action actions">
                        <a href="/courses/{{id}}" target="_blank">Open course</a>

                        {{#if @root.isAuth}}

                            {{#ifeq userId._id @root.userId}}
                                <a href="/courses/{{id}}/edit?allow=true">Edit</a>
                            {{/ifeq}}

                            <form action="/card/add" method="POST">
                                <input type="hidden" name="id" value="{{id}}">
                                <input type="hidden" name="_csrf" value="{{@root.csrf}}">
                                <button type="submit" class="btn btn-primary">By it</button>
                            </form>
                        {{/if}}
                        
                    </div>
                </div>
            </div>
        </div>
    {{/each}}
{{else}}
    <p>Sorry :(</p>
{{/if}}